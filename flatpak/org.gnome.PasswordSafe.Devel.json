{
    "app-id": "org.gnome.PasswordSafe.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "tags" : [
        "devel",
        "development",
        "nightly"
    ],
    "command" : "gnome-passwordsafe",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.a11y.Bus",
        "--talk-name=org.gnome.ScreenSaver"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/debug",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-pykeepass.json",
        "python3-pyotp.json",
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main"
                }
            ],
            "modules" : [
                {
                    "name" : "libsass",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [
                        {
                            "type" : "git",
                            "url" : "https://github.com/lazka/libsass.git",
                            "branch" : "meson"
                        }
                    ]
                },
                {
                    "name" : "sassc",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [
                        {
                            "type" : "git",
                            "url" : "https://github.com/lazka/sassc.git",
                            "branch" : "meson"
                        }
                    ]
                }
            ]
        },
        {
            "name" : "libpwquality",
            "buildsystem" : "autotools",
            "config-opts": [
                "--with-python-binary=python3"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libpwquality/libpwquality.git"
                }
            ]
        },
        {
            "name" : "passwordsafe",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../"
                }
            ]
        }
    ]
}
